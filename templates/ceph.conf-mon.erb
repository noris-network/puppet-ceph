[mon.<%= @id %>]
host = <%= @hostname %>
public addr = <%= @public_addr %>
mon addr = <%= @public_addr %>:6789
<% unless @log_to_syslog.nil? -%>
mon cluster log to syslog = true
<% end -%>
<% unless @mon_log_file.nil? -%>
mon cluster log file = <%= @mon_log_file %>
<% end -%>
mon allow pool delete = true
