[client.radosgw.rgw]
host = <%= @hostname %>
rgw frontends = "civetweb<% unless @rgw_civetweb_port.nil? %> port=<%= @rgw_civetweb_port %><% end %>"
debug rgw = 1
keyring = /etc/ceph/keyring
rgw resolve cname = true
log file = /var/log/ceph/radosgw.log
rgw dns name = <%= @rgw_dns_name %>
<% unless @rgw_bucket_index_max_shards.nil? -%>
rgw override bucket index max shards = <%= @rgw_bucket_index_max_shards %>
<% end -%>
<% unless @rgw_dynamic_resharding.nil? -%>
rgw dynamic resharding = <%= @rgw_dynamic_resharding %>
<% end -%>
